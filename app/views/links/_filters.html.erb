<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <div class="panel panel-default">

      <div class="panel-heading">
        <h3 class="panel-title text-center">Filter Links</h3>
      </div>

      <div class="panel-body">
        <div class="form-group">
          <label for="link-text-filter">Filter by Link Text</label>
          <input type="text" class="form-control" id="link-text-filter" placeholder="Text">
        </div>

        <div class="form-group">
          <label class="radio-inline">
            <input type="radio" name="inlineRadioOptions" id="show-all-filter" checked="checked"> Show All
          </label>
          <label class="radio-inline">
            <input type="radio" name="inlineRadioOptions" id="show-read-filter"> Show Read
          </label>
          <label class="radio-inline">
            <input type="radio" name="inlineRadioOptions" id="show-unread-filter"> Show Unread
          </label>
        </div>

        <div class="form-group">
          <button id="sort-alphabetically" class="btn btn-default" type="submit">Sort Link Titles Alphabetically</button>
          <button id="sort-by-id" class="btn btn-default" type="submit">Sort Links by Date Added</button>
        </div>
      </div>
    </div>
  </div>
</div>
