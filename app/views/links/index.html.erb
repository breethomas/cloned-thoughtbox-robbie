<%= render "links/new" %>

<%= render "links/filters" %>

<div class="all-links">
  <% unless @links.empty? %>
    <% @links.each do |link| %>
      <div class="link-container col-md-6 col-md-offset-3" data-id="<%= link.id %>">
        <div class="panel panel-default">
          <div class="panel-body read-<%= link.read %>">
            <h2 class="title text-center"><%= link.title %></h2>
            <h4 class="url text-center"><%= link.url %></h4>
            <div class="text-center">
              <% if link.read %>
                <button type="button" class="mark-unread btn btn-primary">Mark as Unread</button>
              <% else %>
                <button type="button" class="mark-read btn btn-primary">Mark as Read</button>
              <% end %>
              <%= link_to "Edit Link", edit_link_path(link), class: "btn btn-info" %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  <% else %>
    <div class="col-md-6 col-md-offset-3">
      <div class="panel panel-default">
        <div class="panel-body">
          <h2 class="text-center">No Links Here - Add Some!</h2>
        </div>
      </div>
    </div>
  <% end %>
</div>
