<%= render "links/new" %>

<div class="all-links">
  <% unless @links.empty? %>
    <% @links.each do |link| %>
      <div class="link-container col-md-6 col-md-offset-3">
        <div class="panel panel-default">
          <div class="panel-body read-<%= link.read %>">
            <h2 class="text-center"><%= link.title %></h2>
            <h4 class="text-center"><%= link.url %></h4>
            <div class="text-center">
              <% if link.read %>
                <button type="button" name="button" class="btn btn-primary">Mark as Unread</button>
              <% else %>
                <button type="button" name="button" class="btn btn-primary">Mark as Read</button>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  <% else %>
  <div class="col-md-6 col-md-offset-3">
    <div class="panel panel-default">
      <div class="panel-body">
        <h2 class="text-center">No Links Here - Add Some!</h2>
      </div>
    </div>
  </div>
  <% end %>
</div>
